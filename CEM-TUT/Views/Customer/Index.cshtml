@{
}

<link href="~/css/Feedback.css" rel="stylesheet" />
<script src="https://kit.fontawesome.com/4a0046fff5.js" crossorigin="anonymous"></script>

<style>
    body {
        font-family: Ariel, san-serif;
        margin: 0;
        padding: 0;
        background-color: bisque;
    }

    main {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .card {
        background-color: rgb(255, 255, 255);
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
        padding-left: 10px;
        padding-right: 10px;
    }

    label {
        display: inline-flex;
        align-items: center;
        margin-right: 15px;
        vertical-align: middle;
        position: relative;
    }

        label img {
            width: 30px;
            height: 30px;
            margin-bottom: 10px;
            filter: brightness(1.5) hue-rotate(30deg);
        }

    input[typy="checkbox"]:hover + a {
        color: #3b4c58;
    }

    textarea {
        width: 100%;
        padding: 10px;
        border-radius: 4px;
        ;
        border: 1px solid #ccc;
        resize: none;
    }

    button {
        padding: 10px 20px;
        background-color: #ffa200;
        color: rgb(255, 255, 255);
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        button:hover {
            background-color: darkslategray;
        }

    select {
        width: 100%;
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }
</style>
<body>
    <main>
        <div class="card">
            <h3>Register for a service </h3>
            <form asp-action="index" method="post">

                <div class="form-group">
                    <label asp-for="Name"> Please Enter your name!</label>
                    <input type="text" name="Name" />
                </div>
               <hr />
                <div class="form-group">
                    <label asp-for="cellNumber"> Please Enter your Cell Number!</label>
                    <input type="text" name="cellNumber" />
                </div>
                <hr />
                <div class="form-group">
                    <label asp-for="email"> Please Enter your email!</label>
                    <input type="text" name="email" />
                 </div>
                <hr />
                <div class="form-group">
                    <label asp-for="location"> Please Enter your Location!</label>
                    <input type="text" name="location" />
                </div>
                <hr />
                <div class="form-group">
                    <label asp-for="age"> Please Enter your age!</label>
                    <input type="text" name="age" />
                </div>
                <hr />
                <div class="form-group">
                    <label asp-for="gender">Select your gender:</label>
                    <select name="gender" >
                        <option value="none" Selected>Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Femala</option>
                        
                    </select>
                </div>

                <div class="form-group">
                    <label for="">Select a service provider:</label>
                    <select name="provider" id="providerId">
                        <option value="none" Selected>Select a service provider</option>
                        <option value="MTN">MTN</option>
                        <option value="VODACOM">Vodacom</option>
                        <option value="TELCOM">Telkom</option>
                        <option value="CELL-C">Cell-C</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Select a service you want to use:</label>
                    <select name="serviceName" id="providerId">
                        <option value="" Selected>Select a Service </option>
                        <option value="All NETWORK DATA">All NETWORK DATA</option>
                        <option value="SMS">SMS</option>
                        <option value="NIGHT SUFFER">NIGHT SUFFER</option>
                        <option value="ALL NETWORK MINUTES">ALL NETWORK MINUTES</option>
                    </select>
                </div>

                
                <div class="form-group">
                    <button>Submit</button>
                    <button type="submit" value="Customer">Cancel</button>
                </div>

            </form>
        </div>

    </main>
</body>